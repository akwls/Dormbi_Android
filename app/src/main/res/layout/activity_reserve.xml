<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReserveActivity"
    android:gravity="center_horizontal"
    android:background="#fff">
    <include
        android:id="@+id/action_bar"
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_above="@id/table"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearFloor">
        <TextView
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/floor_textview"
            android:id="@+id/txt1"
            android:text="월" />
        <TextView
            android:textSize="20sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="bold"
            android:text="화" />
        <TextView
            android:textSize="20sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="bold"
            android:text="수" />
        <TextView
            android:textSize="20sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="bold"
            android:text="목" />
        <TextView
            android:textSize="20sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="bold"
            android:text="금" />
        <TextView
            android:textSize="20sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="bold"
            android:text="토" />
        <TextView
            android:textSize="20sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textStyle="bold"
            android:text="일" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/table"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/table_border_thick"
        android:layout_width="wrap_content"
        android:padding="1.5dp"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:background="@drawable/table_border_thinner"
                android:padding="10dp"
                android:gravity="center"
                android:text="" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:padding="10dp"
                android:gravity="center"
                android:text="1" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:padding="10dp"
                android:gravity="center"
                android:text="2" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:padding="10dp"
                android:gravity="center"
                android:text="3" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_height="match_parent"
                android:background="@drawable/table_border_thinner"
                android:gravity="center"
                android:text="19:00~\n  20:10" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/table_border_color"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:textColor="#000"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:textColor="#000"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_height="match_parent"
                android:background="@drawable/table_border_thinner"
                android:gravity="center"
                android:text="20:10~\n  21:20" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/table_border_color"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/table_border_color"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/table_border_color"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_height="match_parent"
                android:background="@drawable/table_border_thinner"
                android:gravity="center"
                android:text="21:20~\n  22:30" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:textColor="#000"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:textColor="#000"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
            <TextView
                android:background="@drawable/table_border_thinner"
                android:textColor="#000"
                android:padding="15dp"
                android:gravity="center"
                android:text="401호" />
        </TableRow>

    </TableLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#808080"
        android:id="@+id/action_bar_subtitle"
        android:layout_width="wrap_content"
        android:layout_below="@id/table"
        android:text="예약하려면 빈칸을 클릭하세요."
        android:layout_height="wrap_content" />

</RelativeLayout>